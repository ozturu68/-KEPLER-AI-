# ======================================
# PROJECT CONFIGURATION
# ======================================
PROJECT_NAME=exoplanet-ml
PROJECT_VERSION=0.1.0
ENVIRONMENT=development
DEBUG=true

DEVELOPER_NAME=Your Name
DEVELOPER_USERNAME=your-username

# ======================================
# NASA API
# ======================================
# ðŸ”‘ NASA API Key'inizi buraya girin
# Almak iÃ§in: https://api.nasa.gov/
NASA_API_KEY=DEMO_KEY

NASA_API_BASE_URL=https://exoplanetarchive.ipac.caltech.edu/cgi-bin/nstedAPI/nph-nstedAPI
NASA_TABLE=cumulative
NASA_FORMAT=csv
NASA_TIMEOUT=300

# ======================================
# MODEL CONFIGURATION
# ======================================
MODEL_VERSION=1.0.0
MODEL_PATH=models/production/best_model.pkl
MODEL_TYPE=catboost
MODEL_REGISTRY_PATH=models/registry
MODEL_EXPERIMENT_PATH=models/experiments

# ======================================
# DATA PATHS
# ======================================
DATA_RAW_PATH=data/raw
DATA_PROCESSED_PATH=data/processed
DATA_EXTERNAL_PATH=data/external
DATA_SAMPLE_PATH=data/sample
DATA_MAX_SIZE_MB=5000
DATA_CACHE_SIZE_MB=2000

# ======================================
# HARDWARE CONFIGURATION (RTX 3050 4GB)
# ======================================
ENABLE_GPU=true
GPU_DEVICE_ID=0
GPU_MEMORY_LIMIT_MB=3500
GPU_MEMORY_FRACTION=0.85

CPU_WORKERS=6
CPU_THREADS_PER_WORKER=2
MAX_CPU_USAGE_PERCENT=80

RAM_LIMIT_MB=12000
ENABLE_MEMORY_PROFILING=false

ENABLE_DISK_CACHE=true
DISK_CACHE_PATH=.cache
DISK_CACHE_SIZE_GB=20

# ======================================
# COLAB INTEGRATION
# ======================================
USE_COLAB=false
COLAB_RUNTIME_TYPE=gpu
COLAB_GPU_TYPE=T4
COLAB_MOUNT_DRIVE=true
COLAB_DRIVE_PATH=/content/drive/MyDrive/exoplanet-ml
SYNC_TO_COLAB=false
SYNC_FROM_COLAB=false

# ======================================
# API CONFIGURATION
# ======================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true
API_PREFIX=/api/v1
API_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8501"]
API_RATE_LIMIT_ENABLED=true
API_RATE_LIMIT_REQUESTS=100
API_RATE_LIMIT_WINDOW=60
API_ENABLE_AUTH=false
API_SECRET_KEY=your-secret-key-here
API_ALGORITHM=HS256
API_ACCESS_TOKEN_EXPIRE_MINUTES=30

# ======================================
# STREAMLIT CONFIGURATION
# ======================================
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_THEME_BASE=dark
STREAMLIT_THEME_PRIMARY_COLOR=#FF4B4B
STREAMLIT_THEME_BACKGROUND_COLOR=#0E1117
STREAMLIT_THEME_SECONDARY_BACKGROUND_COLOR=#262730
STREAMLIT_SERVER_MAX_UPLOAD_SIZE=500
STREAMLIT_SERVER_ENABLE_CORS=false
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false

# ======================================
# LOGGING
# ======================================
LOG_LEVEL=INFO
LOG_FILE=results/logs/app.log
LOG_FORMAT=json
LOG_TO_CONSOLE=true
LOG_TO_FILE=true
LOG_ROTATION=10MB
LOG_RETENTION=7days
LOG_REQUESTS=false
LOG_SQL=false
LOG_PERFORMANCE=true

# ======================================
# DVC CONFIGURATION (Not Used - Hibrit Sistem)
# ======================================
DVC_ENABLED=false
DVC_REMOTE_URL=
DVC_CACHE_DIR=.dvc/cache

# ======================================
# MONITORING & OBSERVABILITY
# ======================================
ENABLE_MONITORING=false
ENABLE_PROFILING=false
ENABLE_METRICS=true
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090
MLFLOW_ENABLED=false
MLFLOW_TRACKING_URI=http://localhost:5000

# ======================================
# FEATURE FLAGS (RTX 3050 4GB Optimized)
# ======================================
ENABLE_GPU=true
ENABLE_GPU_TRAINING=false
ENABLE_GPU_INFERENCE=true
ENABLE_CACHE=true
ENABLE_PREPROCESSING_CACHE=true
ENABLE_MODEL_CACHE=true
ENABLE_PREDICTION_CACHE=false
ENABLE_MEMORY_MAPPING=true
ENABLE_LAZY_LOADING=true
ENABLE_GARBAGE_COLLECTION=true

# ======================================
# TRAINING CONFIGURATION (Hibrit)
# ======================================
TRAIN_BATCH_SIZE=16
TRAIN_BATCH_SIZE_COLAB=64
VAL_BATCH_SIZE=32
TEST_BATCH_SIZE=64
TRAIN_EPOCHS=100
TRAIN_EARLY_STOPPING_PATIENCE=10
TRAIN_EARLY_STOPPING_MIN_DELTA=0.001
TRAIN_LEARNING_RATE=0.01
TRAIN_LR_SCHEDULER=reduce_on_plateau
TRAIN_LR_PATIENCE=5
TRAIN_LR_FACTOR=0.5
TRAIN_VALIDATION_SPLIT=0.15
TRAIN_TEST_SPLIT=0.15
TRAIN_RANDOM_SEED=42
TRAIN_MIXED_PRECISION=true
TRAIN_GRADIENT_ACCUMULATION_STEPS=2
TRAIN_DISTRIBUTED=false
TRAIN_NUM_GPUS=1

# ======================================
# HYPERPARAMETER TUNING (Colab)
# ======================================
TUNE_ENABLED=false
TUNE_N_TRIALS=100
TUNE_TIMEOUT_HOURS=12
TUNE_N_JOBS=1
TUNE_PRUNER=median

# ======================================
# TESTING
# ======================================
TEST_DATA_PATH=data/sample
TEST_SAMPLE_SIZE=1000
TEST_SEED=42
PYTEST_WORKERS=auto
PYTEST_VERBOSE=true
PYTEST_COVERAGE_THRESHOLD=80

# ======================================
# DEPLOYMENT
# ======================================
DEPLOY_TARGET=local
DEPLOY_PORT=8000
DEPLOY_REPLICAS=1
STREAMLIT_CLOUD_ENABLED=false
DOCKER_IMAGE_NAME=exoplanet-ml
DOCKER_IMAGE_TAG=latest

# ======================================
# EXPERIMENTAL FEATURES
# ======================================
ENABLE_AUTO_ML=false
ENABLE_NEURAL_SEARCH=false
ENABLE_ACTIVE_LEARNING=false
ENABLE_FEDERATED_LEARNING=false

# ======================================
# DEVELOPER OPTIONS
# ======================================
ENABLE_DEBUG_MODE=true
ENABLE_HOT_RELOAD=true
ENABLE_PROFILER=false
ENABLE_DEBUGGER=false
JUPYTER_ENABLE_AUTORELOAD=true
JUPYTER_MATPLOTLIB_BACKEND=inline

# ======================================
# CUSTOM PATHS
# ======================================
CUSTOM_CONFIG_PATH=
CUSTOM_MODEL_PATH=
CUSTOM_DATA_PATH=
CUSTOM_LOG_PATH=

# ======================================
# BACKUP & RECOVERY
# ======================================
BACKUP_ENABLED=false
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30
BACKUP_DESTINATION=

# ======================================
# SECURITY & PRIVACY
# ======================================
ENABLE_ENCRYPTION=false
ENABLE_ANONYMIZATION=false
ENABLE_AUDIT_LOG=false

# ======================================
# TIMEZONE & LOCALIZATION
# ======================================
TIMEZONE=Europe/Istanbul
LANGUAGE=tr
DATE_FORMAT=%Y-%m-%d
TIME_FORMAT=%H:%M:%S
DATETIME_FORMAT=%Y-%m-%d %H:%M:%S

# ======================================
# CONTACTS & SUPPORT
# ======================================
SUPPORT_EMAIL=your-email@example.com
GITHUB_REPO=https://github.com/yourusername/your-repo
GITHUB_USERNAME=your-username
PROJECT_URL=https://github.com/yourusername/your-repo