# ======================================
# EXOPLANET ML PROJECT - ENVIRONMENT VARIABLES
# ======================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to git!

# ======================================
# PROJECT CONFIGURATION
# ======================================
PROJECT_NAME=exoplanet-ml
ENVIRONMENT=development
DEBUG=true

# ======================================
# NASA API
# ======================================
NASA_API_KEY=DEMO_KEY

# ======================================
# MODEL CONFIGURATION
# ======================================
MODEL_VERSION=1.0.0
MODEL_PATH=models/production/best_model.pkl
MODEL_TYPE=catboost

# ======================================
# DATA PATHS
# ======================================
DATA_RAW_PATH=data/raw
DATA_PROCESSED_PATH=data/processed
DATA_EXTERNAL_PATH=data/external

# ======================================
# API CONFIGURATION (FastAPI)
# ======================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true
API_PREFIX=/api/v1

# ======================================
# STREAMLIT CONFIGURATION
# ======================================
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_THEME_BASE=dark

# ======================================
# LOGGING
# ======================================
LOG_LEVEL=INFO
LOG_FILE=results/logs/app.log
LOG_FORMAT=json
LOG_TO_CONSOLE=true
LOG_TO_FILE=true

# ======================================
# DVC CONFIGURATION
# ======================================
DVC_REMOTE_URL=gdrive://YOUR_GOOGLE_DRIVE_FOLDER_ID
DVC_CACHE_DIR=.dvc/cache

# ======================================
# MONITORING & OBSERVABILITY
# ======================================
ENABLE_MONITORING=false
ENABLE_PROFILING=false
PROMETHEUS_PORT=9090

# ======================================
# FEATURE FLAGS
# ======================================
ENABLE_GPU=true
ENABLE_CACHE=true
ENABLE_PREPROCESSING_CACHE=true
ENABLE_MODEL_CACHE=true

# ======================================
# TRAINING CONFIGURATION
# ======================================
TRAIN_BATCH_SIZE=32
TRAIN_EPOCHS=100
TRAIN_LEARNING_RATE=0.01
TRAIN_EARLY_STOPPING_PATIENCE=10
TRAIN_VALIDATION_SPLIT=0.2
TRAIN_TEST_SPLIT=0.1

# ======================================
# TESTING
# ======================================
TEST_DATA_PATH=data/sample
PYTEST_WORKERS=auto